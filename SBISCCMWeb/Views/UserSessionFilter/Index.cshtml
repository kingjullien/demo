@using SBISCompanyCleanseMatchBusiness.Objects.EntitiesAndAdapters
@using SBISCCMWeb.LanguageResources;
@using SBISCCMWeb.Utility;
@model UserSessionFilterEntity
@{
    /**/
    if (Helper.Branding == Branding.Matchbook.ToString())
    {
        ViewBag.Title = CommonMessagesLang.lblMatchbook + " | User Session Filter";
    }
    else if (Helper.Branding == Branding.DandB.ToString())
    {
        ViewBag.Title = CommonMessagesLang.lblDunBradstreet + " | User Session Filter";
    }

    AjaxOptions ajaxOption = new AjaxOptions
    {
        UpdateTargetId = "divUserSessionFilter",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST"
    };
}
@Scripts.Render("~/bundles/popupjs")
@Styles.Render("~/Content/popupcss")
@using (Ajax.BeginForm("Index", "UserSessionFilter", null, ajaxOption, new { @autocomplete = "off" }))
{
    <div id="content" style="opacity: 1;">
        <section id="widget-grid" class="">
            <article class="sortable-grid ui-sortable"></article>
            @{
                <a href="#" id="" class="btn btn-primary userFilter"><i class="fa fa-plus"></i></a>
            }
        </section>
    </div>

}
@section scripts{
    <script>
        var deleteSessionFilter = '@CommonMessagesLang.msgDeleteSessionFilter';
        var nothingFound = '@CommonMessagesLang.msgNothingFound';
        var removeSessionFilter = '@CommonMessagesLang.msgDeleteSessionFilter';
        var confirmBox = '@CommonMessagesLang.lblConfirm';
    </script>

    @Scripts.Render("~/bundles/usersessionfilter")
}

