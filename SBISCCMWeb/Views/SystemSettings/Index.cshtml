@model SBISCCMWeb.Models.SystemSettingsModel

@{
    ViewBag.Title = "System Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "divSystemSettings",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST"
    };
}
<link href="~/Content/nouislider.min.css" rel="stylesheet" />
@using (Ajax.BeginForm("Index", "SystemSettings", null, ajaxOptions, new { id = "form_SystemSettings", @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("sldPresets", Model.sldPresets)
    <div id="content" style="opacity: 1;">
        <section id="widget-grid" class="">
            <div class="row">
                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
                    <div id="wid-id-Company" class="jarviswidget jarviswidget-sortable jarviswidget-color-blueDark" data-widget-custombutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">
                        <header role="heading">
                            <h2>
                                <i class="fa  fa-sun-o "></i>
                                <strong>Data Security Settings</strong>
                            </h2>
                            <ul id="widget-tab-Company" class="nav pull-right nav-pills Custom-pill">

                                <li>
                                    <a data-placement="bottom" title="" rel="tooltip" class="button-icon jarviswidget-toggle-btn" href="javascript:void(0);" data-original-title="Collapse"><i class="fa fa-minus "></i></a>
                                </li>
                            </ul>
                        </header>
                        <div role="content">
                            <div class="jarviswidget-editbox"></div>
                            <div class="widget-body no-padding">
                                <div class="tab-content padding-10">
                                    <div id="hr1" class="tab-pane fade active in">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input type="hidden" id="hdnDataSecuritySettings" name="hdnDataSecuritySettings">
                                                <div class="col-md-12">
                                                    <label class="col-xs-2">Basic</label>
                                                    <div id="sldDataSecuritySettings" class="col-xs-5 toparrow">
                                                    </div>
                                                    <label class="col-xs-3">Highly Secure</label>
                                                    <label class="col-xs-1" id="lblDataSecuritySettings"></label>
                                                </div>
                                                <div class="col-md-2"></div>
                                            </div>
                                        </div>
                                        <div class="checkbox-primary">
                                            @Html.CheckBoxFor(@model => @model.isCustomSettings)
                                            <label for="isCustomSettings">
                                                Custom Settings
                                            </label>
                                        </div>
                                        <div id="divSystemSettings">
                                            @{ Html.RenderPartial("_Index", Model); }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>
}

@Scripts.Render("~/bundles/systemsetting")
