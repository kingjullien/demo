@using SBISCCMWeb.Utility;
@using SBISCCMWeb.LanguageResources;
@{
    Layout = null;
}
<div class="modal" id="DuplicateFamilyTreeModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-xs">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <h4 class="modal-title">@FamilyTreeLang.hdrDuplicateFamilyTree</h4>
            </div>
            <div class="modal-body">
                <div id="divHistory">
                    <div class="">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-xs-12">
                                <input type="hidden" name="name" value="@Model" id="hdnSourceFamilyDetailtreeId" />
                                <span><strong>@FamilyTreeLang.lblFamilyTreeName </strong></span>
                                @Html.TextBox("txtDuplicateFamilyTreeName", null, new { @class = "form-control", @autocomplete = "off" })
                                <span id="spnFamilyTreeName" class="error" style="display:none">@FamilyTreeLang.lblEnterFamilyTreeName</span>
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-12">
                                <span><strong>@FamilyTreeLang.lblFamilyTreeType</strong></span>
                                @Html.TextBox("txtDuplicateFamilyTreeType", null, new { @class = "form-control", @autocomplete = "off" })
                                <span id="spnFamilyTreeType" class="error" style="display:none">@FamilyTreeLang.lblEnterFamilyTreeType </span>
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-12">
                                <input type="button" value="@FamilyTreeLang.lblAdd" class="btn btn-primary AddUserButton" onclick="DuplocateFamilyTree()" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>