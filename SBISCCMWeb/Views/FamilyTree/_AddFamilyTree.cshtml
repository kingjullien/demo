@using SBISCCMWeb.Utility;
@using SBISCCMWeb.LanguageResources;
@{
    Layout = null;
    var ActivateFeature = "";
    if (Helper.Branding == Branding.Matchbook.ToString())
    {
        ActivateFeature = BrandingLang.msgMBFeature;
    }
    else if (Helper.Branding == Branding.DandB.ToString())
    {
        ActivateFeature = BrandingLang.msgDNBFeature;
    }
}
@Html.Hidden("ActivateFeature", ActivateFeature)
<div class="modal" id="AddFamilyTreeModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-xs">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <h4 class="modal-title">@FamilyTreeLang.hdrCreateFamilyTree</h4>
            </div>
            <div class="modal-body">
                <div id="divHistory">
                    <div class="">
                        @Html.AntiForgeryToken()
                        <div class="row ">
                            <div class="col-xs-12">
                                <input type="hidden" name="name" value="@Model" id="hdnSourceFamilyDetailtreeId" />
                                <span><strong>@FamilyTreeLang.lblName</strong></span>
                                @Html.TextBox("txtFamilyTreeName", null, new { @class = "form-control", @autocomplete = "off", maxlength = "240" })
                                <span id="spnFamilyTreeName" class="error" style="display:none">@FamilyTreeLang.lblEnterFamilyTreeName</span>
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-12">
                                <span><strong>@FamilyTreeLang.lblFamilyTreeType</strong></span>
                                @Html.TextBox("txtFamilyTreeType", null, new { @class = "form-control", @autocomplete = "off", maxlength = "32" })
                                <span id="spnFamilyTreeType" class="error" style="display:none">@FamilyTreeLang.lblEnterFamilyTreeType</span>
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-12">
                                <span><strong>@FamilyTreeLang.lblAlternateId</strong></span>
                                @Html.TextBox("txtAlternateId", null, new { @class = "form-control", @autocomplete = "off", maxlength = "50" })
                                <span id="spnAlternateId" class="error" style="display:none">@FamilyTreeLang.lblEnterAlternateId</span>
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-12">
                                <input type="button" value="@FamilyTreeLang.lblAdd" class="btn btn-primary AddUserButton" onclick="AddFamilyTree()" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>
