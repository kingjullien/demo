@using SBISCCMWeb.Utility;
@using SBISCCMWeb.LanguageResources;
@model  string

@{
    Layout = null;
}
<div class="modal" id="AddFamilyNodeModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-xs">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <h4 class="modal-title">@FamilyTreeLang.hdrAddNode</h4>
            </div>
            <div class="modal-body">
                <div id="divHistory">
                    <div class="content">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-xs-12">
                                <input type="hidden" name="name" value="@Model" id="hdnSourceFamilyDetailtreeId" />
                                <span><strong>@FamilyTreeLang.lblName</strong></span>
                                @Html.TextBox("txtName", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-12">
                                <span><strong>@FamilyTreeLang.lblNodeDisplayDetails</strong></span>
                                @Html.TextBox("txtNodeDisplayDetails", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-12">
                                <span><strong>@FamilyTreeLang.lblNodeType</strong></span>
                                @Html.TextBox("txtNodeType", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-12">
                                <span><strong>@FamilyTreeLang.lblDetailId</strong></span>
                                @Html.TextBox("txtDetailId", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                            <div class="col-xs-12 paddingto5">
                                <input type="button" value="@FamilyTreeLang.lblAdd" class="btn btn-primary AddUserButton" onclick="AddFamilyTreeNode()" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>