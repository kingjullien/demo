@using SBISCCMWeb.LanguageResources
@{
    Layout = null;

    bool isResetConfig = ViewBag.isResetConfig;
}
@Html.Hidden("isResetConfig", isResetConfig)
<div class="modal" id="ResetSystemDataModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <h4 class="modal-title">
                    @if (!isResetConfig)
                    {
                        <strong>@DandBSettingLang.lblResetData</strong>
                    }
                    else
                    {
                        <strong>@DandBSettingLang.lblResetDataConfiguration</strong>
                    }
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col-xs-12">
                        <input type="text" name="Domain" id="txtDomain" autocomplete="off" class="form-control" />
                        <span>@DandBSettingLang.lblResertTypeYes</span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-12 text-center">
                        <input type="button" id="btnResetDataSubmit" value="@DandBSettingLang.lblReset" name="btnSubmit" class="btn btn-primary" disabled="disabled" />
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>


