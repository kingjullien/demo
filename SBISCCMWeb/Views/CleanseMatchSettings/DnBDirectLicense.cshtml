<form id="form_directlicense">
    @*@Html.Hidden("SettingName", (string)ViewBag.ApiLayer)*@
    <table data-swhgcallback="" data-swhgcontainer="dgBanInputData" data-swhgajax="true" class="table table-bordered panel-group customTable">
        <tbody>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="UserName">User Id</label>
                                @Html.HiddenFor(@model => Model.DNB_USERNAME)
                                @Html.TextBoxFor(@model => Model.Settings[Model.DNB_USERNAME].SettingValue, Model.Settings[Model.DNB_USERNAME].SettingValue, new { @class = "form-control sideTextboxes", @placeholder = "User Id", autocomplete = "off", @id = "txtUserName1", onfocus = "this.removeAttribute('readonly');", @readonly = true })
                                <span id="spnUserName1" class="MonitoringError" style="display:none;">User Id is required.</span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="Password">Password</label>
                                @Html.HiddenFor(@model => Model.DNB_PASSWORD)
                                @Html.PasswordFor(@model => Model.Settings[Model.DNB_PASSWORD].SettingValue, new { value = string.IsNullOrEmpty(Model.Settings[Model.DNB_PASSWORD].SettingValue) ? "" : SBISCCMWeb.Utility.Utility.GetEncryptedString(Model.Settings[Model.DNB_PASSWORD].SettingValue), @class = "form-control sideTextboxes DnBPassword", @placeholder = "Password", autocomplete = "off", @id = "txtPassword1", onfocus = "this.removeAttribute('readonly');", @readonly = true })
                                <span id="spnPassword1" class="MonitoringError" style="display:none;">Password is required.</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                @*<input type="submit" value="Validate Login" name="btnSubmit" class="btn btn-primary" />*@
                                @*<input type="submit" value="Update" name="btnSubmit" class="btn btn-primary" />*@
                                <input type="button" value="Update" name="btnSubmit" id="btnSubmit" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="display:none">
                        <h4>Proxy Setting (if any)</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="Address">Address</label>
                                @Html.HiddenFor(@model => Model.PROXY_SERVER)
                                @Html.TextBoxFor(@model => Model.Settings[Model.PROXY_SERVER].SettingValue, new { @class = "form-control sideTextboxes", @placeholder = "Address" })
                            </div>
                            <div class="col-md-6">
                                <label for="Domain">Domain</label>
                                @Html.HiddenFor(@model => Model.PROXY_DOMAIN)
                                @Html.TextBoxFor(@model => Model.Settings[Model.PROXY_DOMAIN].SettingValue, new { @class = "form-control sideTextboxes", @placeholder = "Domain" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="Password">User Name</label>
                                @Html.HiddenFor(@model => Model.PROXY_USERNAME)
                                @Html.TextBoxFor(@model => Model.Settings[Model.PROXY_USERNAME].SettingValue, Model.Settings[Model.PROXY_USERNAME].SettingValue, new { @class = "form-control sideTextboxes", @placeholder = "User Name" })

                            </div>
                            <div class="col-md-6">
                                <label for="Password">Password</label>
                                @Html.HiddenFor(@model => Model.PROXY_PASSWORD)
                                @Html.PasswordFor(@model => Model.Settings[Model.PROXY_PASSWORD].SettingValue, new { value = SBISCCMWeb.Utility.Utility.GetEncryptedString(Model.Settings[Model.PROXY_PASSWORD].SettingValue), @class = "form-control sideTextboxes ProxyPassword", @placeholder = "Password", autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</form>
