    Layout = null;
    var DBCompanyCleanseContent = Convert.ToString(TempData.Peek("D&BCompanyCleanse")) ?? string.Empty;
}
@*@using (Html.BeginForm("DnBDirectLicense", "CleanseMatchSettings", FormMethod.Post, new { id = "form_directlicense" }))
