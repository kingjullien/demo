@using SBISCCMWeb.LanguageResources
@using SBISCCMWeb.Utility
@{
    Layout = null;
    string Delimiter = ViewBag.Delimiter;
}

 <div class="modal" id="CustomExportDelimiterModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <h4 class="modal-title">@ExportLang.lblInsertDelimiter</h4>
            </div>
            <div class="modal-body">
                <div class="row paddingto5">
                    @Html.AntiForgeryToken()
                    <div class="col-xs-3 paddingtop7">
                        <span><strong>@ExportLang.lblDelimiter:</strong></span>
                    </div>
                    <div class="col-xs-7">
                        @Html.DropDownList("Delimiter", new SelectList(CommonDropdown.GetExportDelimeter(), "Value", "Text", Delimiter), new { @id = "txtDelimiter", @class = "form-control", @autocomplete = "off" })
                        <span id="spnDelimiter" class="error" style="display:none;">@ExportLang.lblRequiredDelimiter</span>
                    </div>
                </div>
                <div class="row paddingto5">

                    <div class="col-xs-10 text-align-center">
                        <input type="submit" id="btnAddDelimiter" value="@ExportLang.lblSave" class="btn btn-primary AddDelimiter" />
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>




