@using SBISCCMWeb.LanguageResources;
@{
    Layout = null;
    string allowedFormats = "xls,xlsx";
}
<div class="modal" id="OIMatchDataAcceptFromFileModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <h4 class="modal-title">@OIMatchDataLang.hdrAcceptFromFile</h4>
            </div>
            <div class="modal-body">
                @Html.Hidden("allowedFormats", allowedFormats)
                <div class="widget-body">
                    <input type="file" id="MatchAcceptFile" accept=".xls,.xlsx" /><br />
                    <label>@OIMatchDataLang.lblAcceptExcel</label><br />
                    <div id="myTabContent" class="tab-content">
                        <h2 class="text-center">@OIMatchDataLang.hdrFileMapping</h2>
                        <div role="content">
                            <div class="jarviswidget-editbox"></div>
                            <div class="widget-body">
                                <div class="tab-content">
                                    <div id="DivPartialBindAcceptMapping">
                                        @{
                                            IPagedList<dynamic> pagedProducts = new StaticPagedList<dynamic>(new List<dynamic>(), 1, 10000, 0);
                                            Html.RenderPartial("~/Views/OI/OIMatchData/_bindAcceptMapping.cshtml", pagedProducts);
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


