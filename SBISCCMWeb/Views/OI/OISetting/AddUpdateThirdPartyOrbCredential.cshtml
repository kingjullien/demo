@using SBISCompanyCleanseMatchBusiness.Objects.EntitiesAndAdapters
@using SBISCCMWeb.Utility
@model ThirdPartyAPICredentialsEntity

@{
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        InsertionMode = InsertionMode.InsertAfter,
        HttpMethod = "POST",
        OnSuccess = "addUpdatethirdPartyOrbAPICredentials"
    };
}
<link href="~/Content/Custom.css" rel="stylesheet" />
<link href="~/Content/CustomPopUp.css" rel="stylesheet" />
<div id="content" style="opacity: 1;">
    <section id="widget-grid" class="">
        <div class="">
            <article class="sortable-grid ui-sortable">
                <div class="jarviswidget jarviswidget-sortable jarviswidget-color-blueDark" data-widget-custombutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">
                    <header role="heading">
                        <h2>
                            @if (Model.CredentialId > 0)
                            {
                                <strong>Update Third Party Orb Credential</strong>
                            }
                            else
                            {
                                <strong>Add Third Party Orb Credential</strong>
                            }
                        </h2>
                    </header>
                    <div role="content">
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body">
                            <div class="tab-content">
                                <div class="tab-pane fade active in">
                                    @using (Ajax.BeginForm("AddUpdateThirdPartyOrbCredential", "OISetting", null, ajaxOptions, new { @class = "formContent", @autocomplete = "off" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-horizontal">
                                            @Html.HiddenFor(model => model.CredentialId)
                                            <div class="form-group">
                                                <div class="col-md-2 text-align-right">
                                                    <span><strong>Credential Name</strong></span>
                                                </div>
                                                <div class="col-md-9">
                                                    @Html.TextBoxFor(model => model.CredentialName, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.CredentialName, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-2 text-align-right"><span><strong>API Key</strong></span></div>
                                                <div class="col-md-9">
                                                    @Html.TextBoxFor(model => model.APICredential, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.APICredential, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-12 text-align-center">
                                                    <input type="submit" value="Save" class="btn btn-primary" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

<script src="~/Scripts/jquery.validate1.19.1.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.3.2.6.min.js"></script>
<script src="~/Scripts/CustomJS-minified/Common.js"></script>
<script>
    function addUpdatethirdPartyOrbAPICredentials(data) {
        debugger;
        if (data.result) {
            parent.callbackthirdPartyOrbAPICredentials(data.Message);
        }
        else {
            parent.ShowMessageNotification("success", data.Message, false);
        }
    }
</script>


