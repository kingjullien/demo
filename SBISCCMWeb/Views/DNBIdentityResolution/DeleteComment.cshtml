@using SBISCCMWeb.LanguageResources
@using SBISCCMWeb.Utility;
@{
    ViewBag.Title = DandBSettingLang.titleAutoAcceptance;
    Layout = null;
    string OrgColumnName = Convert.ToString(ViewBag.OrgColumnName);
    string ExcelColumnName = Convert.ToString(ViewBag.ExcelColumnName);

    string Tags = Convert.ToString(ViewBag.Tags);
    bool IsOverWrite = Convert.ToBoolean(ViewBag.IsOverWrite);
    bool CompanyScore = Convert.ToBoolean(ViewBag.CompanyScore);
}
@Html.AntiForgeryToken()
@Html.Hidden("CriteriaGroupId", (string)ViewBag.CriteriaGroupId)
@Html.Hidden("ToCall", (string)ViewBag.ToCall)
@Html.Hidden("MultipleCriteriaId", (string)ViewBag.MultipleCriteriaId)
@Html.Hidden("OrgColumnName", OrgColumnName)
@Html.Hidden("ExcelColumnName", ExcelColumnName)
@Html.Hidden("Tags", Tags)
@Html.Hidden("IsOverWrite", IsOverWrite)
@Html.Hidden("CompanyScore", CompanyScore)

<div class="modal" id="DeleteAutoAcceptanceDataModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-xs">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <h4 class="modal-title">@DandBSettingLang.hdrUserComment</h4>
            </div>
            <div class="modal-body">
                <div class="tab-pane fade active in">
                    <div class="form-group text-center">
                        <div class="row paddingto5">
                            <div class="col-xs-3 paddingtop7">
                                <span><strong>@DandBSettingLang.lblComment:</strong></span>
                            </div>
                            <div class="col-xs-6 ">
                                @Html.DropDownList("CommentId", new SelectList(new CommonDropdown().LoadUserComment(this.LayoutModel.CurrentClient.ApplicationDBConnectionString), "CommentId", "Comment"), "Select", new { @class = "form-control", @autocomplete = "off" })
                                <span id="spnComment" class="error" style="display:none;">@DandBSettingLang.lblCommentRequire</span>
                            </div>
                        </div>
                        <div class="row paddingto5">
                            <div class="col-xs-3 ">
                                &nbsp;
                            </div>
                            <div class="col-xs-6">
                                <input type="button" id="btnDeleteAutoAcceptance" value="@DandBSettingLang.lblDelete" class="btn btn-primary" />
                                <input type="button" value="@DandBSettingLang.lblCancel" class="btn btn-Secondary btnCancel" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>
