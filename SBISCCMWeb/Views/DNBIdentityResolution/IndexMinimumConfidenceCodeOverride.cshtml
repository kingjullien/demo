@using SBISCCMWeb.LanguageResources
@using SBISCompanyCleanseMatchBusiness.Objects.EntitiesAndAdapters
@using SBISCCMWeb.Utility;
@using PagedList.Mvc;
@model List<ThirdPartyAPICredentialsEntity>
@{
    Layout = null;
}
<article class="col-md-12 sortable-grid ui-sortable custom-height" id="articleMinCCOverride">
    <div class="jarviswidget jarviswidget-sortable jarviswidget-color-blueDark" data-widget-custombutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">
        <header role="heading">
            <h2>
                <strong>@DandBSettingLang.hdrOverrideList</strong>
            </h2>
        </header>
        <div role="content">
            <div class="jarviswidget-editbox"></div>
            <div class="widget-body no-padding">
                <div class="tab-content padding-10">
                    <div class="tab-pane fade active in ">
                        <div class="table-responsive">
                            @using (Ajax.BeginForm("IndexMinimumConfidenceCodeOverride", "DandB", FormMethod.Post, null, new { id = "form_MinCCOverride", @autocomplete = "off" }))
                            {
                                @Html.AntiForgeryToken()
                                <table class="table table-bordered table-fixed-user MinCCOverrideTB">
                                    <thead>
                                        <tr>
                                            <th>@DandBSettingLang.lblMinConfidenceCode</th>
                                            <th>@DandBSettingLang.lblMaxCandidateResults</th>
                                            <th>@DandBSettingLang.lblTags</th>
                                            <th class="nosort">@DandBSettingLang.lblDelete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Count > 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr data-MinCCID="@item.Id">
                                                    <td>@item.MinConfidenceCode</td>
                                                    <td>@item.MaxCandidateQty</td>
                                                    <td>@item.Tag</td>
                                                    <td>@Html.ActionLink(DandBSettingLang.lblDelete, "", "", new { @id = item.Id, href = "javascript:void(0);", @class = "DeleteMinCCOverride" })</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>