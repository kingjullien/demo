@using SBISCCMWeb.Utility
@model decimal?

@{
    var htmlAttributes = new RouteValueDictionary();
    if (ViewBag.@readonly != null)
    {
        htmlAttributes.Add("readonly", ViewBag.@readonly);
    }
    
    if(ViewBag.ClearTextField == true)
    {
        htmlAttributes.Add("class", "form-control clear-text-field input-block-level");
    }
    else
    {
        htmlAttributes.Add("class", "form-control input-block-level");
    }
}

<div class="form-group@(Html.ValidationErrorFor(m => m, " has-error"))">
    @Html.LabelFor(m => m, new { @class = "control-label" })
    <div class="input-group">
        <span class="input-group-addon">&euro;</span>@Html.TextBox(
        "",
        Model == null ? "" : String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:F2}", ViewData.ModelMetadata.Model),
        htmlAttributes)</span>
    </div>
    @Html.ValidationMessageFor(m => m, null, new { @class = "help-block" })
</div>
