@using SBISCCMWeb.LanguageResources
@using SBISCompanyCleanseMatchBusiness.Objects.EntitiesAndAdapters
@using SBISCCMWeb.Utility;
@model List<DUNSregistrationEntity>
@{
    Layout = null;
}
<article class="col-md-12 sortable-grid ui-sortable custom-height " id="articleDUNSRegistration ">
    <div class="jarviswidget jarviswidget-sortable jarviswidget-color-blueDark" data-widget-custombutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">
        <header role="heading">
            <h2>
                <strong>@DandBSettingLang.hdrDUNSRegistrationSetupList</strong>
            </h2>
        </header>
        <div role="content">
            <div class="jarviswidget-editbox"></div>
            <div class="widget-body no-padding">
                <div class="tab-content padding-10">
                    <div class="table-responsive">
                        @Html.AntiForgeryToken()
                        <table class="table table-bordered table-fixed-user MonitoringRegistrationTb">
                            <thead>
                                <tr>
                                    <th>@DandBSettingLang.lblMonitoringProfile</th>
                                    <th>@DandBSettingLang.lblNotificationProfile</th>
                                    @if (Helper.LicenseEnableTags)
                                    {
                                        <th>@DandBSettingLang.lblTags</th>
                                    }
                                    <th>@DandBSettingLang.lblDelete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr data-MonitoringRegistrationId="@item.MonitoringRegistrationId">
                                            <td>@item.MonitoringProfileName</td>
                                            <td>@item.NotificationProfileName</td>
                                            @if (Helper.LicenseEnableTags)
                                            {
                                                <td>@item.Tags</td>
                                            }
                                            <td>@Html.ActionLink("Delete", "", "", new { @id = item.MonitoringRegistrationId, @href = "javascript:void(0)", @class = "DeleteMonitoringRegistration" })</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="4">@DandBSettingLang.lblNoDataAreAvailable</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>