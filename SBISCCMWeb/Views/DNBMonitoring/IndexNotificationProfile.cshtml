@using SBISCCMWeb.LanguageResources
@using SBISCompanyCleanseMatchBusiness.Objects.EntitiesAndAdapters
@model List<NotificationProfileEntity>
@{
    Layout = null;
}
<article class="col-md-12 sortable-grid ui-sortable custom-height " id="articleNotificationProfile">
    <div class="jarviswidget jarviswidget-sortable jarviswidget-color-blueDark" data-widget-custombutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">
        <header role="heading">
            <h2>
                <strong>@DandBSettingLang.hdrNotificationProfileList</strong>
            </h2>
            <ul class="nav pull-right nav-pills custom-pill topbuttonstyle">
                <li class="">
                    <a class="SyncSetting syncNotification btn btn-Secondary">
                        @DandBSettingLang.lblSyncNotificationData
                    </a>
                </li>
            </ul>
        </header>
        <div role="content">
            <div class="jarviswidget-editbox"></div>
            <div class="widget-body no-padding">
                <div class="tab-content padding-10">
                    <div class="table-responsive">

                        @Html.AntiForgeryToken()
                        <table class="table table-bordered table-fixed-user NotificationProfileTb">
                            <thead>
                                <tr>
                                    <th>@DandBSettingLang.lblNotificationProfileName</th>
                                    <th>@DandBSettingLang.lblUserPreferenceName</th>
                                    <th>@DandBSettingLang.lblDeliveryFrequency</th>
                                    <th>@DandBSettingLang.lblDelete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr data-NotificationProfileID="@item.NotificationProfileID">
                                            <td>@item.NotificationProfileName</td>
                                            <td>@item.DeliveryChannelUserPreferenceName</td>
                                            <td>@item.DeliveryFrequency</td>
                                            <td>@Html.ActionLink("Delete", "", "", new { @id = item.NotificationProfileID, @href = "javascript:void(0)", @class = "DeleteNotificationProfile", @autocomplete = "off" })</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="4">@DandBSettingLang.lblNoDataAreAvailable</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>